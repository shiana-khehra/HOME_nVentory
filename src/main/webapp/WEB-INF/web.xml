<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>ca.sait.home_nventory.filters.AuthenticationFilter</filter-class>
    </filter>
    <filter>
        <filter-name>SystemAdminFilter</filter-name>
        <filter-class>ca.sait.home_nventory.filters.SystemAdminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>SystemAdminFilter</filter-name>
        <servlet-name>ManageCategoriesServlet</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>SystemAdminFilter</filter-name>
        <servlet-name>ManageRolesServlet</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>SystemAdminFilter</filter-name>
        <servlet-name>ManageUsersServlet</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <servlet-name>ManageInventoryServlet</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <servlet-name>ManageUserAccountServlet</servlet-name>
    </filter-mapping>
    <servlet>
        <servlet-name>AuthenticationServlet</servlet-name>
        <servlet-class>ca.sait.home_nventory.servlets.AuthenticationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrationServlet</servlet-name>
        <servlet-class>ca.sait.home_nventory.servlets.RegistrationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageUserAccountServlet</servlet-name>
        <servlet-class>ca.sait.home_nventory.servlets.ManageUserAccountServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageInventoryServlet</servlet-name>
        <servlet-class>ca.sait.home_nventory.servlets.ManageInventoryServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageUsersServlet</servlet-name>
        <servlet-class>ca.sait.home_nventory.servlets.ManageUsersServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageCategoriesServlet</servlet-name>
        <servlet-class>ca.sait.home_nventory.servlets.ManageCategoriesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageRolesServlet</servlet-name>
        <servlet-class>ca.sait.home_nventory.servlets.ManageRolesServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthenticationServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrationServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageUserAccountServlet</servlet-name>
        <url-pattern>/user</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageInventoryServlet</servlet-name>
        <url-pattern>/inventory</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageUsersServlet</servlet-name>
        <url-pattern>/manageuser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageCategoriesServlet</servlet-name>
        <url-pattern>/category</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageRolesServlet</servlet-name>
        <url-pattern>/roles</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login</welcome-file>
    </welcome-file-list>
</web-app>
